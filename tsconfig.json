{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "ts-proto-twirp": ["./src"],
      "ts-proto-twirp/*": ["./src/*"]
    },
    "typeRoots": [
      "./declarations/",
      "./node_modules/@types/"
    ]
  },
  "exclude": ["./test", "./dist"],
  "ts-node": {
    "files": true
  }
}
